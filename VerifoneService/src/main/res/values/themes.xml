<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="PinpadService.Theme.MaterialComponents.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Translucidiness simulation -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- <item name="android:windowIsFloating">true</item> -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!-- InfinitePay application theme -->
    <style name="InfinitePay.Theme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- InfinitePay PIN numeric keyboard -->
    <style name="InfinitePay.Theme.NoActionBar.Keyboard" parent="InfinitePay.Theme.NoActionBar">
        <item name="android:background">#263238</item>
        <item name="android:fontFamily">@font/ceraproregular</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">120px</item>
        <item name="android:layout_width">240px</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#AEBAC6</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>
